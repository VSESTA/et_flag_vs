<%- include ("./menu"); %>
<div class="container">
    <h1>My Profile</h1>
    <%- include ("./flash-messages"); %>
    <form action="/user/profile" method="POST">
    <div class="row">
        <div class="col-md-3">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle my-3" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                <span class="font-weight-bold"><%= userWithoutPassword.name %></span>
            </div>
        </div>
        <div class="col-md-9">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col"><label class="labels">Name</label><input type="text" name="name" class="form-control" placeholder="first name" value="<%=userWithoutPassword.name%>"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Email</label><input type="email" name="email" class="form-control" placeholder="enter email" value="<%=userWithoutPassword.email%>"></div>
                </div>
                <div class="mt-5">
                    <a class="btn btn-warning" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">Change Password</a>
                </div>
                <div class="mt-5">
                    <input type="submit" class="btn btn-primary profile-button" value="Save Profile">
                    <a class="btn btn-secondary" href="/dashboard" role="button">Go back</a>
                </div>
            </div>
        </div>
    </div>
    </form>
</div>
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Change Password</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form action="/user/password" method="post">
                <div class="form-group m-3">
                    <label class="labels">Current Password</label>
                    <input type="password" name="curr_password" class="form-control" placeholder="current password" required>
                </div>
                <div class="form-group m-3">
                    <label class="labels">New Password</label>
                    <input type="password" name="new_password" class="form-control" placeholder="new password" required>
                </div>
                <div class="form-group m-3">
                    <label class="labels">Confirm Password</label>
                    <input type="password" name="confirm_password" class="form-control" placeholder="confirm password" required>
                </div>
                <div class="m-3">
                    <input type="submit" class="btn btn-primary profile-button" value="Change Password">
                </div>
        </form>
    </div>
</div>